<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="big_button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="settings_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/main_padding</item>
    </style>

    <style name="item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">18dp</item>
    </style>

    <style name="item_icon">
        <item name="android:layout_width">@dimen/min_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:layout_gravity">end</item>
    </style>
</resources>