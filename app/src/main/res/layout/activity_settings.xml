<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/typography"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_back_button"
                style="@style/basic_button"
                android:layout_height="match_parent"
                android:backgroundTint="?attr/colorPrimary"
                android:contentDescription="@string/go_back"
                app:icon="@drawable/arrow_back"
                app:iconPadding="@dimen/icon_size"
                app:iconSize="@dimen/icon_size"
                app:iconTint="?attr/colorOnPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:paddingVertical="12dp"
                android:text="@string/settings_title"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:orientation="vertical"
            android:paddingVertical="@dimen/main_padding">

            <FrameLayout style="@style/settings_list_item">

                <TextView
                    style="@style/item_text"
                    android:text="@string/dark_theme" />

                <Switch
                    android:layout_width="@dimen/min_button_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="@string/switch_theme"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </FrameLayout>

            <FrameLayout style="@style/settings_list_item">

                <TextView
                    style="@style/item_text"
                    android:text="@string/share" />

                <ImageView
                    style="@style/icon_appendix"
                    android:contentDescription="@string/share"
                    android:src="@drawable/share" />
            </FrameLayout>

            <FrameLayout style="@style/settings_list_item">

                <TextView
                    style="@style/item_text"
                    android:text="@string/support_chat" />

                <ImageView
                    style="@style/icon_appendix"
                    android:contentDescription="@string/support_chat"
                    android:src="@drawable/support" />
            </FrameLayout>

            <FrameLayout style="@style/settings_list_item">

                <TextView
                    style="@style/item_text"
                    android:text="@string/eula" />

                <ImageView
                    style="@style/icon_appendix"
                    android:contentDescription="@string/eula"
                    android:src="@drawable/arrow_forward" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>